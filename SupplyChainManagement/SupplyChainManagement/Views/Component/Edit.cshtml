@{
    Layout = null;
    Component model = ViewBag.Model;
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@(model.ID == 0 ? "添加" : "修改")部件</h3>
    </div>
    <div class="panel-body">

        <form id="form-component" action="/component/save" method="post" class="form-horizontal">
            <div class="modal-body">
                <div class="form-group">
                    <label for="Type" class="control-label col-lg-3">部件类型</label>
                    <div class="col-lg-8">
                        <select name="Type" class="form-control">
                            @foreach (UnitType type in Enum.GetValues(typeof(UnitType)))
                            {
                                var value = (int)type;
                                <option value="@(value)" @(type == model.Type ? "selected" : null)>@(type.GetDescription())</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Brand" class="control-label col-lg-3">品牌</label>
                    <div class="col-lg-8">
                        <input type="text" name="Brand" class="form-control" value="@(model.Brand)" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="Specification" class="control-label col-lg-3">规格</label>
                    <div class="col-lg-8">
                        <input type="text" name="Specification" class="form-control" value="@(model.Specification)" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="Number" class="control-label col-lg-3">型号</label>
                    <div class="col-lg-8">
                        <input type="text" name="Number" class="form-control" @(model.Number) />
                    </div>
                </div>
                <div class="form-group">
                    <label for="Memo" class="control-label col-lg-3">备注</label>
                    <div class="col-lg-8">
                        <input type="text" name="Memo" class="form-control" @(model.Memo) />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-lg-8 col-lg-offset-3">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-ok"></i> 确定</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(function () {
        $("#form-component").submit(function () {
            $(this).post("/component/");
            return false;
        });
    });
</script>

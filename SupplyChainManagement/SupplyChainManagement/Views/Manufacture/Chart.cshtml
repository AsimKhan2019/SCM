@model int
<button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target="#Chart@(Model)">历史价格</button>
<div class="modal fade" id="Chart@(Model)" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">历史价格</h4>
            </div>
            <div class="modal-body">
                <form class="form-inline" action="/Manufacture/AddRate" method="post">
                    <div class="form-group">
                        <label for="Price">更改售价</label>
                        <input type="text" class="form-control"name="Price" />
                        <input type="text" name="SID" style="display:none" value="@(Model)" />
                    </div>
                    <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-edit"></i> 更改</button>
                </form>
                <hr />
                <iframe src="/Manufacture/Price?PID=@(Model)" width="850" height="660">




                </iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-ok"></i> 确定</button>
            </div>
        </div>
    </div>
</div>